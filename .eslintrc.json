{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "max-depth": ["error", 2],
    "no-console": "warn",
    "no-param-reassign": "error",
    "no-undefined": "off",
    "lines-between-class-members": "off",
    "no-useless-escape": "off"
  }
}
