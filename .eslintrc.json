{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "prettier/prettier": ["error", { "endOfLine": "auto" }],
  "rules": {
    "max-depth": ["error", 2],
    "max-lines-per-function": ["error", 15]
  }
}